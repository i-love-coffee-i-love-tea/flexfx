<blueprint
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.osgi.org/xmlns/blueprint/v1.0.0'
        xsi:schemaLocation='http://www.osgi.org/xmlns/blueprint/v1.0.0 https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd'>

    <reference id="toolkitservice" interface="com.javatechnics.osgifx.platform.Toolkit" />

    <bean id="sceneservice" class="com.javatechnics.osgifx.examples.simplenodeservice.scene.AnimatedNodeSceneService"
          init-method="initialise" scope="singleton" >
        <property name="toolkitService" ref="toolkitservice" />
    </bean>

    <service id="animatednodesceneservice" interface="com.javatechnics.osgifx.scene.SceneService"
             ref="sceneservice" />

    <reference-list id="nodeservice" interface="com.javatechnics.osgifx.node.NodeService" availability="optional">
        <reference-listener ref="sceneservice" bind-method="bindNodeService" unbind-method="unbindNodeService"/>
    </reference-list>

    <bean id="animatednode" class="com.javatechnics.osgifx.examples.simplenodeservice.node.AnimatedNode" scope="singleton"
          init-method="initialise" activation="lazy">
        <property name="toolkitService" ref="toolkitservice" />
    </bean>

    <reference id="osgiEventAdmin" interface="org.osgi.service.event.EventAdmin" />

    <bean id="animatednodecontrols" class="com.javatechnics.osgifx.examples.simplenodeservice.controls.AnimatedNodeControls"
          scope="singleton"
          init-method="initialise" activation="lazy">
        <property name="eventAdmin" ref="osgiEventAdmin" />
        <property name="toolkitService" ref="toolkitservice" />
    </bean>

    <service id="animatednodeservice" interface="com.javatechnics.osgifx.node.NodeService" ref="animatednode"/>

    <service id="animatednodecontrolsservice" interface="com.javatechnics.osgifx.node.NodeService"
             ref="animatednodecontrols"/>

    <service id="animatedNodeEventListener" interface="org.osgi.service.event.EventHandler"
             ref="animatednode">
        <service-properties>
            <entry key="event.topics" value="animatednode/controls/*" />
        </service-properties>
    </service>

</blueprint>